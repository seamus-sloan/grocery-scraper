{
  "manifest_version": 3,
  "name": "Grocery Price Comparator",
  "version": "1.0",
  "description": "Search multiple grocery sites and compare prices.",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": [
    "https://www.kroger.com/*",
    "https://www.meijer.com/*",
    "https://www.aldi.com/*",
    "https://www.walmart.com/*",
    "https://www.costco.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {}
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.kroger.com/search*",
        "https://www.meijer.com/shopping/search*", 
        "https://www.aldi.us/results*",
        "https://www.walmart.com/search*",
        "https://www.costco.com/s*",
        "https://www.costco.com/no-search-results-grocery.html"
      ],
      "js": ["scraping/storeConfigs.js", "scraping/genericScraper.js"],
      "run_at": "document_end"
    }
  ]
}
